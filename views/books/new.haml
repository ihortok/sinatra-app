%form{ action: '/books', method: :post}
  %fieldset
    %ul
      %li
        %label{for: 'book[name]'} Name:
        %input{type: :text, name: 'book[name]'}
      %li
        %label{for: 'book[price]'} Price:
        %input{type: :number, name: 'book[price]'}
      %li
        %label{for: 'book[img_url]'} Image link:
        %input{type: :text, name: 'book[img_url]'}
      %li
        %label{for: 'book[description]'} Description:
        %input{type: :text, name: 'book[description]', class: :text}
      %li
        %label{for: 'book[author_id]'} Author:
        %select{name: 'book[author_id]'}
          - Author.all.each do |author|
            %option{value: author.id} #{author.first_name} #{author.last_name}
    %input{type: :submit, value: :send, class: :button}
